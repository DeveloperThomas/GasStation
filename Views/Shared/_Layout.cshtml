@inject SignInManager<ApplicationUser> signInManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <script src="~/js/iziToast.js"></script>
    <link href="~/css/iziToast.css" rel="stylesheet" />

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GasStation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    @*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css" integrity="sha512-1PKOgIY59xJ8Co8+NE6FZ+LOAZKjy+KY8iq0G4B3CyeY6wYHN3yt9PW0XpSriVlkMXe40PTKnXrLnZ9+fkDaog==" crossorigin="anonymous" />*@
    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
</head>

<body>
    <script>
            window.RootUrl = '@Url.Content("~/")';
            $(document).ready(function () {

                var info = '@TempData["Info"]';
                if (info != null && info != "") {
                    iziToast.success({

                        message: info,

                    });
                }

                var warning = '@TempData["Warning"]';
                if (warning != null && warning != "") {
                    iziToast.error({

                        message: warning,
                    });
                }
            });

    </script>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow ">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Transaction" asp-action="Index">Strona główna</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Product" class="btn btn-primary">Produkty</a>

                        </li>
                        <li class="nav-item">

                            <a asp-action="Index" asp-controller="Discount" class="btn btn-primary">Promocje</a>
                        </li>
                        <li class="nav-item">

                            <a asp-action="Index" asp-controller="Tank" class="btn btn-primary">Zbiorniki</a>
                        </li>
                        <li class="nav-item">

                            <a asp-action="Index" asp-controller="Distributor" class="btn btn-primary">Dystrybutory</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle btn btn-primary" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Raporty
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a asp-action="ReportOfSales" asp-controller="Report" class="btn">Raport sprzedaży</a>
                                <a asp-action="ReportOfFueling" asp-controller="Fueling" class="dropdown-item">Tankowania</a>
                            </div>
                        </li>

                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="LoyaltyCard" class="btn btn-primary">Karty lojalnościowe</a>
                        </li>
                        @if (signInManager.IsSignedIn(User) && User.IsInRole("Administrator"))
                        {
                            <li class="nav-item">
                                <form method="post" asp-action="logout" asp-controller="account">
                                    <button type="submit" class="nav-link btn btn-link py-0" style="width:auto">
                                        Wyloguj @User.Identity.Name
                                    </button>
                                </form>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Zarządzanie
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a asp-action="ListUsers" asp-controller="Administration" class="dropdown-item">Użytkownicy</a>
                                    <a asp-action="ListRoles" asp-controller="Administration" class="dropdown-item">Role</a>
                                    <a asp-action="EditUser" asp-controller="Account" class="dropdown-item">Konto</a>
                                </div>
                            </li>
                        }
                        else if (signInManager.IsSignedIn(User) && !User.IsInRole("Administrator"))
                        {
                            <li class="nav-item">
                                <form method="post" asp-action="logout" asp-controller="account">
                                    <button type="submit" class="nav-link btn btn-link py-0" style="width:auto">
                                        Wyloguj @User.Identity.Name
                                    </button>
                                </form>
                            </li>
                            <li class="nav-item">
                                <a asp-action="EditUser" asp-controller="Account" class="nav-link btn btn-link py-0">Zarządzanie kontem</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a asp-action="login" asp-controller="account" class="nav-link btn btn-link py-0">Logowanie</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <br/>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - GasStation - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

<style>
    .nav-item {
        padding-right: 10px;
    }
    .input-validation-error {
        background: #FEF1EC;
        border: 1px solid #CD0A0A;
    }
</style>