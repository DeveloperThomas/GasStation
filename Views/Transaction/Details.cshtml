@model GasStation.Models.Transaction





<div>
    <h4>Szczegóły transakcji</h4>
    <hr />
    <dl class="row">
        <dt class = "col-md-2">
            Pracownik
        </dt>
        <dd class = "col-md-10">
            @(Model.ApplicationUser.Name + " " + Model.ApplicationUser.Surname)
        </dd>
        @if (Model.LoyaltyCardId == null)
        {
            <dt></dt>
        }
        else 
        {
            <dt class = "col-sm-2">
                Nr karty lojalnościowej
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.LoyaltyCard.LoyaltyCardId)
            </dd>
        }

        <dt class = "col-sm-2">
            Data
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            Rodzaj płatności
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PaymentType)
        </dd>
            <dt class = "col-sm-2">
                Potwierdzenie
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.PaymentConfirmationRequested)
            </dd>
        <h2 style="text-align:center;">Produkty w transakcji</h2>
    <div class="container">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Nazwa
                        </th>
                        <th>
                            Cena
                        </th>
                        <th>
                            Ilość
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ProductsLists)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Product.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
        

    </dl>
</div>
<div>
    @*<a asp-action="Edit" asp-route-id="@Model.TransactionId">Edit</a> |*@
    <a asp-action="Index">Powrót do listy transakcji</a>
</div>
