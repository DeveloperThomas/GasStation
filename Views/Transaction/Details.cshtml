@model GasStation.Models.Transaction

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Transaction</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Pracownik
        </dt>
        <dd class = "col-sm-10">
            @(Model.ApplicationUser.Name + " " + Model.ApplicationUser.Surname)
        </dd>
        @if (Model.LoyaltyCardId == null)
        {
            <dt></dt>
        }
        else 
        {
            <dt class = "col-sm-2">
                Nr karty lojalnościowej
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.LoyaltyCard.LoyaltyCardId)
            </dd>
        }

        <dt class = "col-sm-2">
            Data
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            Rodzaj płatności
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PaymentType)
        </dd>
        @if(Model.PaymentConfirmationRequested == null)
        {
            <dt></dt>
        }
        else
        {
            <dt class = "col-sm-2">
                Potwierdzenie
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.PaymentConfirmationRequested)
            </dd>
        }

        @foreach (var product in Model.ProductsLists)
        {
        <dt class = "col-sm-2">
            Product: 
        </dt>
        <dd class = "col-sm-10">
            @product.Product.Name
        </dd>
        }

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.TransactionId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
