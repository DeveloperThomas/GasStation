@model GasStation.Models.ModelsView.TransactionCreate

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Transaction.LoyaltyCardId" class="control-label"></label>
                <select asp-for="Transaction.LoyaltyCardId" class ="form-control" asp-items="ViewBag.LoyaltyCardId"></select>
            </div>
            @foreach (var transactionProduct in Model.TransactionProduct) 
            {
                <p>Name = @transactionProduct.Product.Name</p>
                <p>Amount = @transactionProduct.Amount</p>
                <input asp-for="@transactionProduct.Product" class="form-control" />
                <input asp-for="@transactionProduct.Amount" class="form-control" />
            }
            <div class="form-group">
                <label asp-for="Transaction.Date" class="control-label"></label>
                <input asp-for="Transaction.Date" class="form-control" />
                <span asp-validation-for="Transaction.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.PaymentType" class="control-label"></label>
                    <select class="form-control" asp-for="Transaction.PaymentType" asp-items="Model.TypesOfPayment"></select>
                <span asp-validation-for="Transaction.PaymentType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.PaymentConfirmationRequested" class="control-label"></label>
                <input asp-for="Transaction.PaymentConfirmationRequested" class="form-control" />
                <span asp-validation-for="Transaction.PaymentConfirmationRequested" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
