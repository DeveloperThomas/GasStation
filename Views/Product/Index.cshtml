@model IEnumerable<GasStation.Models.Product>


<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.css">

<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>


<span><a asp-action="Create" asp-controller="Product" class="btn btn-danger">Dodaj produkt</a></span>
<br/>
<br/>
<br/>
<table class="display" id="productTable">
    <thead>
        <tr>
            <th>
             Nazwa
            </th>
            <th>
              Cena
            </th>
            <th>
               Wartość w punktach
            </th>
            <th>
               Ilość na stanie
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoyaltyPointsPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    <span><a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-primary">Edycja</a></span>
                    <span><a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger">Usuń</a></span>
                </td>
            </tr>
        }
    </tbody>
</table>


<script>

    $(document).ready(function () {
        $('#productTable').DataTable({
            "iDisplayLength": 10,
            "columnDefs": [
                { "orderable": false, "targets": [0, 2] }

            ],
            "language": {
                "sSearch": "Szukaj",
                "productTable":"Pokaż",
                "sSearchPlaceholder": "Wyszukiwarka",
                "zeroRecords": "Nie znaleziono żadnych danych",
                "paginate": {
                    "previous": "Poprzednia",
                    "next": "Następna",
                },
                "info": "Pokaż _PAGE_ of _PAGES_",
                "lengthMenu": "Pokaż _MENU_ rekordów na stronie",
            }
        });
    })
</script>